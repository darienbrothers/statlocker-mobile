# StatLocker Mobile Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Environment
NODE_ENV=development
EXPO_PUBLIC_ENV=development

# App Configuration
EXPO_PUBLIC_APP_NAME=StatLocker
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_API_URL=https://api.statlocker.app
EXPO_PUBLIC_WEB_URL=https://statlocker.app

# Firebase Configuration - Development
EXPO_PUBLIC_FIREBASE_API_KEY_DEV=your-firebase-api-key-dev
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN_DEV=your-project-dev.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID_DEV=your-project-dev
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET_DEV=your-project-dev.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID_DEV=123456789
EXPO_PUBLIC_FIREBASE_APP_ID_DEV=1:123456789:web:abcdef123456
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID_DEV=G-ABCDEF1234

# Firebase Configuration - Staging
EXPO_PUBLIC_FIREBASE_API_KEY_STAGING=your-firebase-api-key-staging
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN_STAGING=your-project-staging.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID_STAGING=your-project-staging
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET_STAGING=your-project-staging.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID_STAGING=123456789
EXPO_PUBLIC_FIREBASE_APP_ID_STAGING=1:123456789:web:abcdef123456
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID_STAGING=G-ABCDEF1234

# Firebase Configuration - Production
EXPO_PUBLIC_FIREBASE_API_KEY_PROD=your-firebase-api-key-prod
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN_PROD=your-project-prod.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID_PROD=your-project-prod
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET_PROD=your-project-prod.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID_PROD=123456789
EXPO_PUBLIC_FIREBASE_APP_ID_PROD=1:123456789:web:abcdef123456
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID_PROD=G-ABCDEF1234

# Analytics Configuration
EXPO_PUBLIC_POSTHOG_API_KEY=your-posthog-api-key
EXPO_PUBLIC_POSTHOG_HOST=https://app.posthog.com
EXPO_PUBLIC_ANALYTICS_ENABLED=true

# Sentry Configuration (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=statlocker-mobile
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# RevenueCat Configuration (In-App Purchases)
EXPO_PUBLIC_REVENUECAT_API_KEY=your-revenuecat-api-key

# Google Services
GOOGLE_SERVICES_API_KEY=your-google-services-api-key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Apple Services
APPLE_TEAM_ID=your-apple-team-id
APPLE_APP_ID=your-apple-app-id

# Development Tools
FLIPPER_ENABLED=true
EXPO_DEVTOOLS_LISTEN_ADDRESS=0.0.0.0

# Feature Flags
EXPO_PUBLIC_FEATURE_ANALYTICS=true
EXPO_PUBLIC_FEATURE_HAPTICS=true
EXPO_PUBLIC_FEATURE_OFFLINE_SUPPORT=true
EXPO_PUBLIC_FEATURE_PUSH_NOTIFICATIONS=false
EXPO_PUBLIC_FEATURE_IN_APP_PURCHASES=false

# API Endpoints
EXPO_PUBLIC_AUTH_API_URL=https://auth.statlocker.app
EXPO_PUBLIC_STATS_API_URL=https://stats.statlocker.app
EXPO_PUBLIC_GOALS_API_URL=https://goals.statlocker.app
EXPO_PUBLIC_RECRUITING_API_URL=https://recruiting.statlocker.app

# Third-Party Integrations
EXPO_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token
EXPO_PUBLIC_AMPLITUDE_API_KEY=your-amplitude-api-key

# Security
EXPO_PUBLIC_APP_SECRET=your-app-secret-key
EXPO_PUBLIC_JWT_SECRET=your-jwt-secret

# Performance Monitoring
EXPO_PUBLIC_PERFORMANCE_MONITORING=true
EXPO_PUBLIC_BUNDLE_ANALYZER=false

# Debugging
EXPO_PUBLIC_DEBUG_MODE=false
EXPO_PUBLIC_LOG_LEVEL=info